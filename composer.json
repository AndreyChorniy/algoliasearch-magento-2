{
    "name": "algolia/algoliasearch-magento-2",
    "description": "Algolia metapackage for Magento 2",
    "keywords": [
        "php",
        "magento",
        "magento2",
        "algolia",
        "search"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Algolia",
            "email": "support@algolia.com"
        }
    ],
    "support": {
        "source": "https://https://github.com/algolia/algoliasearch-magento-2",
        "issues": "https://https://github.com/algolia/algoliasearch-magento-2/issues"
    },
    "require": {
        "php": "^7.1.3",
        "algolia/algoliasearch-admin": "@dev",
        "brainmaestro/composer-git-hooks": "^2.8",
        "localheinz/phpstan-rules": "^0.10.0",
        "magento/magento-coding-standard": "^5.0",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.6",
        "phpstan/phpstan": "^0.11.19",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpunit/phpunit": "^7.5.17|^8.4.3",
        "roave/no-floaters": "^1.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "phpcompatibility/php-compatibility": "^9.3",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        },
        {
            "type": "path",
            "url": "./AlgoliaSearchAdmin"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "7.2.5"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "test"
            ]
        }
    },
    "scripts": {
        "release": "./dev/release.sh < /dev/tty",
        "lint": "phpcbf",
        "test:types":"phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always",
        "test:lint": "phpcs",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
